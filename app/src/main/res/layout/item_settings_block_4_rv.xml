<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="48dp"
    android:layout_width="wrap_content"
    android:background="@android:color/transparent"
    android:id="@+id/view"
    >

    <ImageView
        android:id="@+id/settings_block_icon"
        style="@style/settings_icon"
        android:src="@drawable/ic_sub"
        android:layout_centerVertical="true"/>


    <TextView
        android:id="@+id/settings_block_text"
        style="@style/settings_text_17sp"
        android:text="@string/sub"
        android:layout_toEndOf="@+id/settings_block_icon"/>


    <ImageView
        style="@style/go_image_view_location"
        android:layout_marginEnd="32dp"/>

    <FrameLayout
        style="@style/line_frame"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
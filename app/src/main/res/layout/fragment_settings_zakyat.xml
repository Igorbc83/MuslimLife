<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_white"
    android:orientation="vertical"
    android:id="@+id/main_layout">


    <LinearLayout
        style="@style/handler_layout"
        >
        <ImageButton
            android:id="@+id/back_button"
            style="@style/back_image_but"/>
        <TextView
            style="@style/location_titel_text_34sp"
            android:layout_marginStart="16dp"
            android:text="@string/settings"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fonds"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="27dp">

        <ImageView
            android:id="@+id/imageView_fonds"
            android:layout_width="20dp"
            android:layout_height="21dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_fonds"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/settings_text_17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fonds"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_fonds"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="6.2dp"
            android:layout_height="10.4dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/ic_arrow"
            android:rotation="180"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/gray" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <FrameLayout
        style="@style/line_frame"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/currency"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/imageView_currency"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_currency"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/settings_text_17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/currency"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_currency"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="6.2dp"
            android:layout_height="10.4dp"
            android:layout_marginEnd="25dp"
            android:src="@drawable/ic_arrow"
            android:rotation="180"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/gray" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <FrameLayout
        style="@style/line_frame"/>

</LinearLayout>
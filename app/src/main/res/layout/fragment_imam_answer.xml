<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/back_button"
            style="@style/back_image_but"/>

        <TextView
            style="@style/location_city_text_17sp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/sf_pro_display_semibold"
            android:text="@string/imam_answer" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_gravity="right"
        android:background="@drawable/answer_bg"
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_margin="16dp">
        <TextView
            android:id="@+id/answer_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/helper_text_13sp"
            tools:text="05.04.2021"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/textTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/settings_text_15sp"
            android:layout_marginTop="8dp"
            tools:text="Текст"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="8dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="360dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/avatarIv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp">
            <TextView
                android:id="@+id/answer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/settings_text_17sp_semibold"
                tools:text="Имя Фамилия"/>
            <TextView
                android:id="@+id/answer_date_imam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/helper_text_13sp"
                tools:text="05.04.2021"
                android:textColor="@color/gray"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/answer_full_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/settings_text_17sp"
        android:layout_marginHorizontal="16dp"
        tools:text="Текст"/>

</LinearLayout>
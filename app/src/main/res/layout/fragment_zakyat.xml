<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/light_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="16dp">

        <ImageButton
            android:id="@+id/back_button"
            style="@style/back_image_but"
            android:layout_marginStart="0dp" />

        <ImageButton
            android:id="@+id/zakyat_set"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_set"
            android:visibility="invisible"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/zakyat_titel"
        style="@style/reg_text_40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/zakyat_payment"
        android:textSize="34sp" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="8dp">

            <TextView
                android:id="@+id/pay_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_card"
                android:textColor="#2196F3"
                android:autoLink="web"
                android:layout_marginTop="16dp"
                android:paddingVertical="8dp"
                android:visibility="gone"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                >

                <TextView
                    android:id="@+id/zakyat_fond"
                    style="@style/settings_text_17sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:text="@string/test_zakyat" />

                <ImageButton
                    android:id="@+id/zakyat_inf"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:padding="20dp"
                    android:src="@drawable/ic_info_new" />
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/zakayat_text_13sp"
                android:text="@string/cash"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/zakyat_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/settings_text_17sp_semibold"
                tools:text="100 000"
                android:layout_marginStart="12dp"
                android:inputType="number"
                android:layout_marginVertical="10dp"
                android:background="@null"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/zakayat_text_13sp"
                android:text="@string/monye_in_bank"
                android:layout_marginTop="25dp"/>

            <EditText
                android:id="@+id/zakyat_money_in_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/settings_text_17sp_semibold"
                tools:text="100 000"
                android:layout_marginStart="12dp"
                android:inputType="number"
                android:layout_marginVertical="10dp"
                android:background="@null"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/zakayat_text_13sp"
                android:text="@string/goods"
                android:layout_marginTop="25dp"/>

            <EditText
                android:id="@+id/zakyat_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/settings_text_17sp_semibold"
                tools:text="100 000"
                android:layout_marginStart="12dp"
                android:inputType="number"
                android:layout_marginVertical="10dp"
                android:background="@null"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/zakayat_text_13sp"
                android:text="@string/gold"
                android:layout_marginTop="25dp"/>

            <EditText
                android:id="@+id/zakyat_gold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/settings_text_17sp_semibold"
                tools:text="100 000"
                android:layout_marginStart="12dp"
                android:inputType="number"
                android:layout_marginVertical="10dp"
                android:background="@null"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider"
                />

            <TextView
                android:id="@+id/zakyat_summ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                style="@style/prayer_titel_text_22sp"
                tools:text="Ваш закят 10 000 рублей"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_black"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:text="@string/_0_025x"
                android:layout_marginTop="6dp"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/zakyat_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_money"
        android:fontFamily="@font/lato_semibold"
        android:textSize="17sp"
        style="@style/mater_but_filled"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="16dp"
        android:visibility="gone"/>

</LinearLayout>